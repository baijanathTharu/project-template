# Run the container with `docker run -p 3000:3000 -t core-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system core-backend && \
          adduser --system -G core-backend core-backend

COPY dist/apps/core-backend core-backend/
RUN chown -R core-backend:core-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix core-backend --omit=dev -f install

CMD [ "node", "core-backend" ]
